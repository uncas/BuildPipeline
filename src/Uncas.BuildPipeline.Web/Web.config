<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <connectionStrings>
    <add name="BuildPipelineConnectionString" connectionString="Server=.\SqlExpress;Database=develop_BuildPipeline;Integrated Security=true;" />
  </connectionStrings>
  <!-- Required for MONO -->
  <system.web>
    <compilation debug="false" targetFramework="4.0">
